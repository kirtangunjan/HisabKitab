<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - HisabKitab</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">

    <!-- Navbar -->
    <nav class="p-4 bg-white shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-red-500">HisabKitab</a>
            <div class="space-x-6">
                <a href="/" class="text-gray-800 hover:text-red-500">Home</a>
                <a href="/profile" class="text-gray-800 hover:text-red-500">Profile</a>
                <a href="/logout" class="text-gray-800 hover:text-red-500">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Edit Profile Section -->
    <section class="py-20">
        <div class="max-w-4xl mx-auto px-6">
            <div class="bg-white p-8 rounded-lg shadow-lg">
                <div class="text-center">
                    <h1 class="text-3xl font-bold text-red-500">Edit Profile</h1>
                    <p class="text-lg text-gray-600 mt-2">Update your personal details below.</p>
                </div>

                <!-- Edit Profile Form -->
                <form action="/update/<%= user._id%>" method="POST" class="mt-8 space-y-6">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <!-- Username -->
                        <div class="flex flex-col">
                            <label for="username" class="text-sm font-medium text-gray-600">Username</label>
                            <input type="text" id="username" name="username" value="<%= user.username%>" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                        <!-- Name -->
                        <div class="flex flex-col">
                            <label for="name" class="text-sm font-medium text-gray-600">Full Name</label>
                            <input type="text" id="name" name="name" value="<%= user.name%>" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <!-- Email -->
                        <div class="flex flex-col">
                            <label for="email" class="text-sm font-medium text-gray-600">Email</label>
                            <input type="email" id="email" name="email" value="<%= user.email%>" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                        <!-- Phone Number -->
                        <div class="flex flex-col">
                            <label for="phone" class="text-sm font-medium text-gray-600">Phone Number</label>
                            <input type="text" id="phone" name="phone" value="<%= user.phoneno%>" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <!-- Age -->
                        <div class="flex flex-col">
                            <label for="age" class="text-sm font-medium text-gray-600">Age</label>
                            <input type="number" id="age" name="age" value="<%= user.name%>" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                        <!-- Location -->
                        <div class="flex flex-col">
                            <label for="location" class="text-sm font-medium text-gray-600">Location</label>
                            <input type="text" id="location" name="location" value="City, Country" required
                                   class="w-full px-4 py-2 border border-gray-600 bg-zinc-50 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        </div>
                    </div>

                    <!-- Save Button -->
                    <div class="mt-8 text-center">
                        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 font-semibold">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 HisabKitab. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
