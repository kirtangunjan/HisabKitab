<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Hisab - HisabKitab</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">

    <!-- Navbar -->
    <nav class="p-4 bg-red-500">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl text-white font-bold">HisabKitab</h1>
            <div class="space-x-6">
                <a href="/view-hisab" class="text-white hover:underline">View Hisab</a>
            </div>
        </div>
    </nav>

    <!-- Edit Hisab Form -->
    <div class="container mx-auto my-10">
        <h2 class="text-3xl font-bold text-red-500 mb-6 text-center">Edit Hisab</h2>

        <div class="bg-gray-100 shadow-lg rounded-lg p-6">
            <form action="/update-hisab/<%= post._id %>" method="POST">
                <!-- Date Input -->
                <label for="date" class="block text-gray-700">Date:</label>
                <input type="date" name="date" value="<%= post.date.toISOString().split('T')[0] %>" class="w-full p-2 mt-2 mb-4 border rounded" required>

                <!-- Category Input -->
                <label for="category" class="block text-gray-700">Category:</label>
                <input type="text" name="category" value="<%= post.category %>" class="w-full p-2 mt-2 mb-4 border rounded" required>

                <!-- Amount Input -->
                <label for="amount" class="block text-gray-700">Amount:</label>
                <input type="number" name="amount" value="<%= post.amount %>" class="w-full p-2 mt-2 mb-4 border rounded" required>

                <!-- Description Input -->
                <label for="description" class="block text-gray-700">Description:</label>
                <textarea name="description" class="w-full p-2 mt-2 mb-4 border rounded" required><%= post.description %></textarea>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-red-500 text-white p-3 mt-4 rounded-lg hover:bg-red-600">Update Hisab</button>
            </form>
        </div>
    </div>

</body>
</html>
